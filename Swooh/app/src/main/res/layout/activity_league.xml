<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">
    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_height="0dp" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
    />
    <ImageView
            android:layout_width="135dp"
            android:layout_height="39dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Desired League"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:textSize="18sp"
            android:textColor="@android:color/background_light"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="335dp"
            android:layout_height="163dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">
        <ToggleButton
                android:text="MENS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton11" android:textOff="MENS" android:textOn="MENS"
                android:background="@drawable/swooh_toggle" android:textColor="@android:color/background_light"/>
        <ToggleButton
                android:text="WOMENS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton12" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" android:textOff="WOMENS" android:textOn="WOMENS"
                android:background="@drawable/swooh_toggle" android:textColor="@android:color/background_light"/>
        <ToggleButton
                android:text="CO-ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton13" android:textOff="CO-ED"
                android:textOn="CO-ED" android:background="@drawable/swooh_toggle"
                android:textColor="@android:color/background_light"/>
    </LinearLayout>
    <Button
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            android:textColor="@android:color/background_light" app:layout_constraintHorizontal_bias="0.49"
            android:background="@drawable/swooh_button" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>